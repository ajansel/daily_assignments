<% if current_user.follows?(user) %>
  <!-- <% button_to 'Unfollow', user_follow_url(user), method: :delete %> -->
  <button type="button" class="follow-toggle" data-user-id="<%=user.id%>" data-initial-follow-state="followed" disabled="false"></button>
<% else %>
  <!-- <% button_to 'Follow', user_follow_url(user), method: :post %> -->
  <button type="button" class="follow-toggle" data-user-id="<%=user.id%>" data-initial-follow-state="unfollowed" disabled="false"></button>
<% end %>
